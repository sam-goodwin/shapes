{
  "extends": "@tsconfig/node20",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "lib",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["bun-types"],
    "strict": true,
    "exactOptionalPropertyTypes": true
  }
}
